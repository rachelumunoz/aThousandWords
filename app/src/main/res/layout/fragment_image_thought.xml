<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imageThought_image"
        android:layout_width="376dp"
        android:layout_height="327dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/stairs"
        tools:layout_editor_absoluteY="-161dp"
        />

    <EditText
        android:id="@+id/imageThought_thought"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Praesent commodo cursus magna, vel scelerisque nisl consectetur et. Nullam quis risus eget urna mollis ornare vel eu leo."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/imageThought_image"/>

    <EditText
        android:id="@+id/imageThought_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="July 14, 2017"
        app:layout_constraintTop_toBottomOf="@+id/imageThought_thought"
        tools:layout_editor_absoluteX="26dp"/>

    <CheckBox
        android:id="@+id/imagThought_complete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Complete"
        app:layout_constraintBaseline_toBaselineOf="@+id/imageThought_date"
        tools:layout_editor_absoluteX="256dp"/>

</android.support.constraint.ConstraintLayout>